# ============================================
# Test Environment Configuration
# ============================================
# Configuration for running integration tests
# Uses separate test database and Redis instances
#
# Usage:
#   cp env.test.example .env.test
#   # Or export these variables before running tests
# ============================================

# Environment
ENV=test

# Log Level for tests (usually info or debug)
LOG_LEVEL=info

# ============================================
# Database Configuration (Test)
# ============================================
# Note: Uses port 5433 to avoid conflicts with main postgres (5432)

DB_HOST=localhost
DB_PORT=5433
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=anki_test
DB_SSLMODE=disable
DB_MAX_CONNECTIONS=10
DB_MAX_IDLE_CONNS=5
DB_CONN_MAX_LIFETIME=5

# ============================================
# Redis Configuration (Test)
# ============================================
# Note: Uses port 6380 to avoid conflicts with main redis (6379)

REDIS_HOST=localhost
REDIS_PORT=6380
REDIS_PASSWORD=
REDIS_DB=0

# ============================================
# Server Configuration (Not used in tests, but required)
# ============================================

SERVER_HOST=0.0.0.0
SERVER_PORT=8080
SERVER_READ_TIMEOUT=30
SERVER_WRITE_TIMEOUT=30
SERVER_IDLE_TIMEOUT=120

# ============================================
# JWT Configuration (Not used in tests, but required)
# ============================================

JWT_SECRET_KEY=test-secret-key-for-testing-only-do-not-use-in-production
JWT_ACCESS_TOKEN_EXPIRY=15
JWT_REFRESH_TOKEN_EXPIRY=7
JWT_ISSUER=anki-api-test

# ============================================
# Storage Configuration (Not used in tests, but required)
# ============================================

STORAGE_TYPE=local
STORAGE_LOCAL_PATH=./storage_test
